{
  "name": "phalcon/phalcon",
  "description": "Phalcon Framework",
  "keywords": [
    "php",
    "framework",
    "psr-3",
    "psr-11"
  ],
  "license": "MIT",
  "require": {
    "php": ">=8.1 <9.0",
    "ext-apcu": "*",
    "ext-fileinfo": "*",
    "ext-igbinary": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pdo": "*",
    "ext-redis": "*",
    "ext-xml": "*",
    "matthiasmullie/minify": "^1.3",
    "payload-interop/payload-interop": "^1.0",
    "phalcon/traits": "^2.0",
    "phpbench/phpbench": "^1.2",
    "psr/container": "^2.0"
  },
  "suggest": {
    "ext-gd": "to use Image\\Adapter\\Gd",
    "ext-imagick": "to use Image\\Adapter\\Imagick",
    "ext-memcached": "to use Cache\\Adapter\\Libmemcached, Storage\\Adapter\\Libmemcached",
    "ext-openssl": "to use Encryption\\Crypt",
    "ext-yaml": "to use Config\\Adapter\\Yaml"
  },
  "autoload": {
    "psr-4": {
      "Phalcon\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Phalcon\\Tests\\": "tests/",
      "Phalcon\\Tests\\Benchmarks\\": "tests/benchmarks/",
      "Phalcon\\Tests\\Cli\\": "tests/cli/",
      "Phalcon\\Tests\\Database\\": "tests/database/",
      "Phalcon\\Tests\\Integration\\": "tests/integration/",
      "Phalcon\\Tests\\Support\\": "tests/support/",
      "Phalcon\\Tests\\Unit\\": "tests/unit/",
      "Phalcon\\Tests\\Controllers\\": "tests/_data/fixtures/controllers/",
      "Phalcon\\Tests\\Fixtures\\": "tests/_data/fixtures/",
      "Phalcon\\Tests1\\Fixtures\\": "tests/support/data/fixtures/",
      "Phalcon\\Tests\\Listener\\": "tests/_data/listener/",
      "Phalcon\\Tests\\Models\\": "tests/_data/fixtures/models/",
      "Phalcon\\Tests\\Module\\": "tests/_support/Module/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "require-dev": {
    "ext-gettext": "*",
    "ext-yaml": "*",
    "codeception/codeception": "^5.0",
    "codeception/module-apc": "^3.0",
    "codeception/module-asserts": "^3.0",
    "codeception/module-cli": "^2.0",
    "codeception/module-db": "^3.1",
    "codeception/module-filesystem": "^3.0",
    "codeception/module-memcache": "^3.0",
    "codeception/module-redis": "^3.0",
    "friendsofphp/php-cs-fixer": "^3.13",
    "pds/skeleton": "^1.0",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^10.5",
    "squizlabs/php_codesniffer": "^3.7",
    "vimeo/psalm": "^5.4",
    "vlucas/phpdotenv": "^5.5"
  },
  "scripts": {
    "analyze": "vendor/bin/phpstan analyse -c phpstan.neon",
    "cs": "vendor/bin/phpcs --standard=phpcs.xml",
    "cs-fix": "vendor/bin/phpcbf --standard=phpcs.xml",
    "test-unit": "php vendor/bin/codecept run --ext DotReporter unit",
    "test-cli": "php vendor/bin/codecept run --ext DotReporter cli",
    "test-integration": "php vendor/bin/codecept run --ext DotReporter integration",
    "test-db-common": "php vendor/bin/codecept run --ext DotReporter database -g common",
    "test-db-mysql": "php vendor/bin/codecept run --ext DotReporter database --env mysql -g mysql",
    "test-db-pgsql": "php vendor/bin/codecept run --ext DotReporter database --env pgsql -g pgsql",
    "test-db-sqlite": "php vendor/bin/codecept run --ext DotReporter database --env sqlite -g sqlite",
    "test-db": "test-db-common && test-db-mysql && test-db-pgsql && test-db-sqlite",
    "test-all": "test-unit && test-cli && test-integration && test-db",
    "test-unit-html": "./vendor/bin/phpunit --coverage-html=./tests/support/output/coverage/ --display-deprecations"
  }
}
